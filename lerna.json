{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "npmClient": "npm",
      "verifyAccess": false,
      "verifyRegistry": false,
      "ignoreChanges": [
        "yarn.lock",
        "*.test.ts",
        "*.test.ts.snap",
        "*.mock.ts",
        "**/README.md",
        "**/CHANGELOG.md",
        "**/__fixtures__/**",
        "**/__tests__/**",
        "lerna.json"
      ],
      "allowBranch": "master"
    }
  },
  "registry": "https://npm.ginsp.net/",
  "useWorkspaces": true
}
